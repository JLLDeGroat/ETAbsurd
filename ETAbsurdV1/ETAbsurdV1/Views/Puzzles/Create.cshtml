@model ETAbsurdV1.Models.PuzzleStart
@{
    ViewBag.Title = "Create";
}
@Styles.Render("~/Content/Create/css")

@Styles.Render("~/bundles/JqueryUI/css")


<div class="puzzle-create-page">
    <div class="row">
        <div class="col-md-4">
            <div class="puzzle-create-box">
                <h3 class="h-speak">
                    P a g c 
                    <br/>
                    @ViewData["User"]
                </h3>
            </div>
        </div>
    </div>

    <!--Choosing-->
    <div class="row">
        @using (Html.BeginForm())
        {
        <div class="col-md-4">
            <div class="puzzle-create-box">
                <h4 class="puzzle-create-text">
                    What kind of puzzle or activity do you want to create/form. Please choose from the following with examples to maybe complete some incomplete thoughts.
                </h4>
                <select id="Cat-Dropdown" class="form-control hidden">
                    <option disabled selected>Please Select</option>
                </select>
                @Html.TextBoxFor(p => p.Category, new { @class = "form-control hidden" })
                <div class="post-submit-load">
                    <div class="post-load-line"></div>
                    <div class="post-load-blip"></div>
                </div>
                <h4 class="puzzle-create-text">
                    Please ensure your category is correctly spelt so I can read it, and assist you further.
                </h4>
            </div>            
        </div>
        <div class="col-md-8">
            <div class="puzzle-create-box">
                <h3 id="Chosen-Category"></h3>
                @Html.TextBoxFor(p =>p.ChosenCategory, new { @class = "hidden" })
                <hr />  
                <div id="Category-Description">
                   
                </div>
                <div class="row">
                    <div class="col-sm-offset-6 col-sm-6">
                        <input type="submit" class="submit-button form-control hidden" value="Begin" />
                    </div>
                </div>
            </div>
        </div>
        <hr />
        }
    </div>
    
    
</div>

@Scripts.Render("~/bundles/JqueryUI")
@Scripts.Render("~/Scripts/Create/js")

