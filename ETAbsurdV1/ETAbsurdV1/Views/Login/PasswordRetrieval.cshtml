@model ETAbsurdV1.Models.PasswordRetrievalModel
@{
    ViewBag.Title = "PasswordRetrieval";
}
@{ 
    IEnumerable<ETAbsurdV1.Models.PasswordRetrievalModel> Part = ViewData["Section"] as IEnumerable<ETAbsurdV1.Models.PasswordRetrievalModel>;
}
@Styles.Render("~/Content/Login/css")

<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>


<div class="row">
    <div class="col-md-offset-4 col-sm-4 form spawn-in">
        @foreach (var item in Part)
        {
            if (item.Section == "PartOne")
            {
            <h2>Send Code via</h2>
            <hr />
                using (Html.BeginForm())
                {
                @Html.ValidationSummary(true, "Errrr")
                <h2>User Name</h2>
                @Html.TextBoxFor(p => p.UserName, new { @class = "form-control" })
                @Html.ValidationMessageFor(p => p.UserName, "", new { @class = "text-danger validation-text" })            
                <hr/>
                <input type="submit" value="Send Code" class="form-control submit-button" />
                }
            <h2>Or</h2>
            <hr/>
                using (Html.BeginForm())
                {
                @Html.ValidationSummary(true, "Errrr")
                <h2>Email</h2>
                @Html.TextBoxFor(p => p.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(p => p.Email, "", new { @class = "text-danger validation-text" })
                <hr/>
                <input type="submit" value="Send Code" class="form-control submit-button" />
                }
            <div class="options">
                <a class="option-1" onclick="window.location = '@Url.Action("PasswordRetrieval", "Login", new { GotCode = "Yes" })'">Already Got Code</a><br />
                <a class="option-2"></a>
            </div>
            }
            else if(item.Section == "PartTwo")
            {
            <h2>Enter Code</h2>
                using (Html.BeginForm())
                {
                @Html.ValidationSummary(true, "Errrr")
                @Html.TextBoxFor(p => p.Code, new { @class = "form-control" })
                <hr/>
                <input type="submit" value="Reset " class="form-control submit-button" />
                }
            }
        }
    </div>
</div>
