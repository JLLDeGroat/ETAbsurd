@model ETAbsurdV1.Models.RegisterModel

@{
    ViewBag.Title = "Register";
}

@Styles.Render("~/Content/Login/css")

@Scripts.Render("~/bundles/JqueryUI")

<div class="row overflow-control">
    <div class="col-md-offset-4 col-sm-4 form spawn-in">
        <h2>Register</h2>
        <hr />
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true, "")
            <h2>User Name</h2>
            @Html.TextBoxFor(p => p.UserName, new { @class = "form-control" })
            @Html.ValidationMessageFor(p => p.UserName, "", new { @class = "text-danger validation-text" })
            <h2>Email</h2>
            @Html.TextBoxFor(p => p.Email, new { @class = "form-control" })
            @Html.ValidationMessageFor(p => p.Email, "", new { @class = "text-danger validation-text" })
            <h2>Password</h2>
            @Html.PasswordFor(p => p.Password, new { @class = "form-control" })
            @Html.ValidationMessageFor(p => p.Password, "", new { @class = "text-danger validation-text" })
            <h2>Confirm Password</h2>
            @Html.PasswordFor(p => p.ConfirmPassword, new { @class = "form-control" })
            @Html.ValidationMessageFor(p => p.ConfirmPassword, "", new { @class = "text-danger validation-text" })
            <hr />
            <input type="submit" value="Create Account" class="form-control submit-button" />
            <h2>@ViewData["Fail"]</h2>
        }
        <div class="options">
            <a class="option-1" onclick="window.location = '@Url.Action("Login","Login")'">Already Registered</a><br />
            <a class="option-2"></a>
        </div>
    </div>
</div>
